<layout id="WatchFace">


    <drawable id="RingSteps" class="CustomArc">
        <param name="radius">173</param>
        <param name="color">Graphics.COLOR_BLUE</param>
    </drawable>

    <drawable id="RingActivityMinutesWeek" class="CustomArc">
        <param name="radius">143</param>
        <param name="color">Graphics.COLOR_YELLOW</param>
    </drawable>

    <drawable id="RingFloorsClimbed" class="CustomArc">
        <param name="radius">158</param>
        <param name="color">Graphics.COLOR_PURPLE</param>
    </drawable>

    <label id="HeartrateIcon" text="3" x="150" y="260" font="@Fonts.font_icon" justification="Graphics.TEXT_JUSTIFY_LEFT" color="Graphics.COLOR_RED" />
    <label id="HeartrateValue" x="190" y="263" font="Graphics.FONT_XTINY" justification="Graphics.TEXT_JUSTIFY_LEFT" color="Graphics.COLOR_WHITE" />

    <label id="BatteryValue" x="center" y="70" font="Gfx.FONT_XTINY" justification="Graphics.TEXT_JUSTIFY_CENTER" color="Gfx.COLOR_GREEN" />
    
    <label id="TimeValue" x="center" y="90" font="Graphics.FONT_LARGE" justification="Graphics.TEXT_JUSTIFY_CENTER" color="Gfx.COLOR_WHITE" />
    <label id="DateValue" x="center" y="135" font="Gfx.FONT_XTINY" justification="Graphics.TEXT_JUSTIFY_CENTER" color="Gfx.COLOR_WHITE" />      
    
    <label id="ActivityMinutesWeekIcon" text="6" x="90" y="180" font="@Fonts.font_icon" justification="Graphics.TEXT_JUSTIFY_LEFT" color="Graphics.COLOR_YELLOW" />
    <label id="ActivityMinutesWeekValue" x="135" y="183" font="Graphics.FONT_XTINY" justification="Graphics.TEXT_JUSTIFY_LEFT" color="Graphics.COLOR_WHITE" />

    <label id="StepsIcon" text="5" x="190" y="180" font="@Fonts.font_icon" justification="Graphics.TEXT_JUSTIFY_LEFT" color="Graphics.COLOR_BLUE" />
    <label id="StepsValue" x="230" y="183" font="Graphics.FONT_XTINY" justification="Graphics.TEXT_JUSTIFY_LEFT" color="Graphics.COLOR_WHITE" />

    <label id="FloorsClimbedIcon" text="0" x="90" y="220" font="@Fonts.font_icon" justification="Graphics.TEXT_JUSTIFY_LEFT" color="Graphics.COLOR_PURPLE" />
    <label id="FloorsClimbedValue" x="135" y="223" font="Graphics.FONT_XTINY" justification="Graphics.TEXT_JUSTIFY_LEFT" color="Graphics.COLOR_WHITE" />

    <label id="CaloriesBurnedIcon" text="2" x="190" y="220" font="@Fonts.font_icon" justification="Graphics.TEXT_JUSTIFY_LEFT" color="Graphics.COLOR_ORANGE" />
    <label id="CaloriesBurnedValue" x="230" y="223" font="Graphics.FONT_XTINY" justification="Graphics.TEXT_JUSTIFY_LEFT" color="Graphics.COLOR_WHITE" />

</layout>