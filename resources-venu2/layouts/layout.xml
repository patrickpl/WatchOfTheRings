<layout id="WatchFace">

    <drawable id="RingSteps" class="CustomArc">
        <param name="radius">200</param>
        <param name="color">Graphics.COLOR_BLUE</param>
    </drawable>

    <drawable id="RingFloorsClimbed" class="CustomArc">
        <param name="radius">185</param>
        <param name="color">Graphics.COLOR_PURPLE</param>
    </drawable>

    <drawable id="RingActivityMinutesWeek" class="CustomArc">
        <param name="radius">170</param>
        <param name="color">Graphics.COLOR_YELLOW</param>
    </drawable>

    <label id="HeartrateIcon" text="3" x="180" y="310" font="@Fonts.font_icon" justification="Graphics.TEXT_JUSTIFY_LEFT" color="Graphics.COLOR_RED" />
    <label id="HeartrateValue" x="220" y="313" font="Graphics.FONT_XTINY" justification="Graphics.TEXT_JUSTIFY_LEFT" color="Graphics.COLOR_WHITE" />

    <label id="BatteryValue" x="center" y="70" font="Gfx.FONT_XTINY" justification="Graphics.TEXT_JUSTIFY_CENTER" color="Gfx.COLOR_GREEN" />
    
    <label id="TimeValue" x="center" y="90" font="Graphics.FONT_LARGE" justification="Graphics.TEXT_JUSTIFY_CENTER" color="Gfx.COLOR_WHITE" />
    <label id="DateValue" x="center" y="145" font="Gfx.FONT_XTINY" justification="Graphics.TEXT_JUSTIFY_CENTER" color="Gfx.COLOR_WHITE" />      
    
    <label id="ActivityMinutesWeekIcon" text="6" x="120" y="210" font="@Fonts.font_icon" justification="Graphics.TEXT_JUSTIFY_LEFT" color="Graphics.COLOR_YELLOW" />
    <label id="ActivityMinutesWeekValue" x="165" y="213" font="Graphics.FONT_XTINY" justification="Graphics.TEXT_JUSTIFY_LEFT" color="Graphics.COLOR_WHITE" />

    <label id="StepsIcon" text="5" x="225" y="210" font="@Fonts.font_icon" justification="Graphics.TEXT_JUSTIFY_LEFT" color="Graphics.COLOR_BLUE" />
    <label id="StepsValue" x="260" y="213" font="Graphics.FONT_XTINY" justification="Graphics.TEXT_JUSTIFY_LEFT" color="Graphics.COLOR_WHITE" />

    <label id="FloorsClimbedIcon" text="0" x="120" y="250" font="@Fonts.font_icon" justification="Graphics.TEXT_JUSTIFY_LEFT" color="Graphics.COLOR_PURPLE" />
    <label id="FloorsClimbedValue" x="165" y="253" font="Graphics.FONT_XTINY" justification="Graphics.TEXT_JUSTIFY_LEFT" color="Graphics.COLOR_WHITE" />

    <label id="CaloriesBurnedIcon" text="2" x="225" y="250" font="@Fonts.font_icon" justification="Graphics.TEXT_JUSTIFY_LEFT" color="Graphics.COLOR_ORANGE" />
    <label id="CaloriesBurnedValue" x="260" y="253" font="Graphics.FONT_XTINY" justification="Graphics.TEXT_JUSTIFY_LEFT" color="Graphics.COLOR_WHITE" />

</layout>